<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/tvTitreRecap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Récapitulatif de la location"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"/>

    <ListView
        android:id="@+id/listViewFilmsLoue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tvDateLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvDateRetour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnRetourAccueil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retour à l'accueil"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_green_dark"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>
</LinearLayout>
